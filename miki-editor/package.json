{
  "name": "miki-editor",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@octokit/graphql": "9.0.3",
    "@radix-ui/react-slot": "1.2.4",
    "@tanstack/react-query": "^4.39.2",
    "@tanstack/react-query-devtools": "^4.39.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^13.5.0",
    "@toast-ui/editor": "^3.2.2",
    "@toast-ui/editor-plugin-code-syntax-highlight": "^3.1.0",
    "@toast-ui/react-editor": "^3.2.3",
    "axios": "^1.9.0",
    "body-parser": "^2.2.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "compromise": "^14.14.4",
    "cors": "^2.8.5",
    "dexie": "^4.0.11",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "gray-matter": "4.0.3",
    "immer": "^10.1.1",
    "js-yaml": "^4.1.0",
    "lucide-react": "0.553.0",
    "octokit": "^4.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-force-graph-2d": "^1.27.1",
    "react-markdown": "^8.0.7",
    "react-split": "^2.0.14",
    "showdown": "^2.1.0",
    "tailwind-merge": "3.4.0",
    "tailwindcss-animate": "1.0.7",
    "turndown": "^7.2.0",
    "uuid": "^11.1.0",
    "zustand": "^4.5.7"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server.js",
    "start": "concurrently \"npm run dev\" \"npm run server\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ui": "jest --testPathPattern=snapshot",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "lint": "eslint src/ --ext .js,.jsx --fix",
    "lint:check": "eslint src/ --ext .js,.jsx",
    "lint:ci": "eslint src/ --ext .js,.jsx --format json --output-file eslint-report.json",
    "validate:generated": "node scripts/validate-ai-generated.js",
    "validate:ui-safety": "node scripts/validate-ui-safety.js",
    "security:scan": "npm audit && node scripts/security-scan.js",
    "perf:analyze": "node scripts/performance-analysis.js",
    "ai:status": "node scripts/ai-status.js",
    "ai:promote": "node scripts/ai-promote.js",
    "ai:ready-for-integration": "node scripts/ai-integration-ready.js",
    "integrate:gradual": "node scripts/gradual-integration.js",
    "feature:enable": "node scripts/feature-flag.js enable",
    "feature:disable": "node scripts/feature-flag.js disable",
    "feature:list": "node scripts/feature-flag.js list",
    "snapshot:update": "jest --updateSnapshot",
    "snapshot:check": "jest --testPathPattern=snapshot --passWithNoTests",
    "ui:backup": "node scripts/backup-ui-files.js",
    "ui:restore": "node scripts/restore-ui-files.js",
    "ui:lock": "git lfs lock src/App.jsx src/MikiEditor.jsx src/AiPanel.jsx",
    "ui:unlock": "git lfs unlock src/App.jsx src/MikiEditor.jsx src/AiPanel.jsx",
    "precommit": "npm run lint:check && npm run test:ui && npm run validate:ui-safety",
    "prepush": "npm run test && npm run validate:generated",
    "ci": "npm run lint:ci && npm run test:coverage && npm run test:ui && npm run build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "danger": "^11.3.0",
    "date-fns": "^4.1.0",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^15.1.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.17",
    "terser": "^5.42.0",
    "vite": "^5.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run precommit",
      "pre-push": "npm run prepush"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "src/App.jsx": [
      "echo '⚠️ App.jsx 변경 감지! 신중히 검토해주세요.'",
      "npm run test:ui"
    ],
    "src/MikiEditor.jsx": [
      "echo '⚠️ MikiEditor.jsx 변경 감지! 신중히 검토해주세요.'",
      "npm run test:ui"
    ],
    "src/AiPanel.jsx": [
      "echo '⚠️ AiPanel.jsx 변경 감지! 신중히 검토해주세요.'",
      "npm run test:ui"
    ]
  }
}
